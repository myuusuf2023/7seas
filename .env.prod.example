# ===========================================
# 7-Seas Suites - Production Environment
# ===========================================
# Copy this file to .env.prod and fill in the values:
#   cp .env.prod.example .env.prod
#
# IMPORTANT: Never commit .env.prod to version control!

# --- Django ---
DEBUG=False
SECRET_KEY=CHANGE-ME-generate-a-random-64-char-string
DJANGO_SETTINGS_MODULE=config.settings.production

# --- SSL ---
# Set to True only after SSL/HTTPS is configured (e.g. with Let's Encrypt)
SECURE_SSL=False

# --- Domain / IP ---
# Use your server IP if no domain yet, or domain name(s) comma-separated
# Example with IP:     ALLOWED_HOSTS=213.199.36.106
# Example with domain: ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=213.199.36.106
# Use http:// for IP-only, https:// once SSL is enabled
CORS_ALLOWED_ORIGINS=http://213.199.36.106

# --- Database ---
POSTGRES_DB=sevenseas_db
POSTGRES_USER=sevenseas_user
POSTGRES_PASSWORD=CHANGE-ME-use-a-strong-password
DATABASE_URL=postgresql://sevenseas_user:CHANGE-ME-use-a-strong-password@db:5432/sevenseas_db

# --- Frontend ---
REACT_APP_API_URL=/api
REACT_APP_APP_NAME=7-Seas Suites Management
